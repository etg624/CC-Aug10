include mixins
doctype
html
	head
		title Command Center 5.0
		script( src='/javascripts/jquery-3.1.1.min.js' )
		script(src='https://unpkg.com/popper.js/dist/umd/popper.min.js')
		script( src='/bootstrap/js/bootstrap.min.js' )
		script( src='/bootstrap-table/bootstrap-table.min.js' )
		link(href="/bootstrap/css/bootstrap.min.css", rel="stylesheet")
		link(href="/bootstrap-table/bootstrap-table.min.css", rel="stylesheet")
		link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.2.0/css/all.css', integrity='sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ', crossorigin='anonymous')
		script(type="text/javascript", src="/perfect-scrollbar/dist/perfect-scrollbar.js")
		link(rel='stylesheet', href='/perfect-scrollbar/css/perfect-scrollbar.css')		
		script( src='/javascripts/bootbox.min.js' )
		
	body(style="padding-bottom:10rem;")
		.container
			block content
				include navbar
				br
	.row.with-margin
		.col-md-2.col-sm-2.col-xs-2
		.col-md-3.col-sm-3.col-xs-12
				.panel.panel-default
						.panel-heading
								h3.panel-title Name
						div#infoContainer.scrollable-table
										table#infoTable.table.table-hover.table-striped.table-bordered
														thead
														-each result in getFaceResult
																		tr.default(id=result.FaceID)
																						th=result.Name
				.panel.panel-default
						.panel-heading
								h3.panel-title Tags
						div#tagContainer.scrollable-table
										table#tagTable.table.table-hover.table-striped.table-bordered
														thead
														-each result in getAssignedTagsResult
																		tr.default(id=result.TagID)
																						th=result.TagName
				#addButton
						a.btn.btn-default.btn-block
							i.fas.fa-plus(aria-hidden='true')
							| &nbsp Add New Tag
				#assignButton
						a.btn.btn-default.btn-block
							i.fas.fa-list(aria-hidden='true')
							| &nbsp Assign Existing Tag							
				#deleteButton
						a.btn.btn-default.btn-block
							i.fas.fa-trash-alt(aria-hidden='true')
							| &nbsp Remove Tag
				#backButton
						a.btn.btn-default.btn-block(href = '/rcognize/gallery')
							i.fas.fa-hand-point-left(aria-hidden='true')
							| &nbsp Back To Gallery
		.col-md-1.col-sm-1.col-xs-12							
		.col-md-4.col-sm-4.col-xs-12
			img#incidentPhoto(src="",  width = "100%", height = "100%", display = 'none')
								
	script(src='/rcognize/RcognizeGalleryDetailScript.js')
	script.
			var getFaceResult = !{ JSON.stringify(getFaceResult) };
			var getAssignedTagsResult = !{JSON.stringify(getAssignedTagsResult)};
			var getAllTagsResult = !{JSON.stringify(getAllTagsResult)};
			var serverAddress = !{ JSON.stringify(serverAddress) };
			initScript();
	
	
	

								


								


